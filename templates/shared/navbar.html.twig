<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="{{ path('home') }}">Symblog</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
      </li>

      {% for category in categoryRepository.findAll() %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('category_show', {'title': category.title }) }}">{{ category.title | capitalize }}</a>
        </li>
      {% endfor %}
    </ul>

    {% if app.user %}
      {% if is_granted('ROLE_ADMIN') %}      
        <a href="{{ path('category_create') }}" class="btn-success p-2 mr-2 rounded">Créer une catégorie</a>
        <a href="{{ path('article_create') }}" class="btn-success p-2 mr-2 rounded">Créer un article</a>    
      {% endif %}
      <a href="{{ path('app_logout') }}" class="btn-danger p-2 mr-2 rounded">Deconnexion</a>    
    {% else %}
      <a href="{{ path('app_login') }}" class="btn-success p-2 mr-2 rounded">Connexion</a>    
      <a href="{{ path('security_subscribe') }}" class="btn-success p-2 rounded">Inscription</a>
    {% endif %}

  </div>
</nav>